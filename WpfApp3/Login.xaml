<Window x:Class="WpfApp3.Login"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp3"
		mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		Title="Logwanie" Height="400" Width="400">
	<Grid>
		<TextBlock Text="Login:" TextWrapping="Wrap" Margin="20,50,20,0"/>
		<TextBlock Text="" Name="loginerrorr" TextAlignment="Center" Foreground="Red" TextWrapping="Wrap" Margin="20,90,20,0"/>
		<TextBox Name="nick" TextWrapping="Wrap" Height="20" Width="120" Margin="20,50,20,0" VerticalAlignment="Top" MaxLength="20"/>
		<TextBlock Text="Hasło:" TextWrapping="Wrap"  Margin="20,130,20,0"/>
		<TextBlock Text="" Name="passerror" TextAlignment="Center" Foreground="Red" TextWrapping="Wrap" Margin="20,170,20,0"/>
		<PasswordBox Name="pass" Height="20" Width="120" Margin="20,130,20,0" VerticalAlignment="Top"  MaxLength="20"/>
		<Button Name="submit" Click="submit_Click" Content="Zaloguj" Height="25" Margin="20,100,20,0" Width="70"/>
		<Button Name="forgot" Click="forgot_Click" Content="Zapomniałem hasła" Height="25" Margin="20,180,20,0" Width="120"/>
	</Grid>
</Window>

<Window x:Class="WpfApp3.Forgot"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp3"
		mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		Title="Przypominanie hasła" Height="400" Width="400">
	<Grid>
		<TextBlock Text="E-mail:" TextWrapping="Wrap" Margin="20,75,20,0"/>
		<TextBlock Text="" Name="mailerror"  Foreground="Red" TextAlignment="Center" TextWrapping="Wrap" Margin="20,150,20,0"/>
		<TextBox Name="mail" TextWrapping="Wrap" Height="20" Width="120" Margin="20,75,20,0" VerticalAlignment="Top" MaxLength="20"/>
		<Button Name="submit" Click="submit_Click" Content="Zresetuj hasło" Height="25" Margin="20,100,20,0" Width="120"/>
		<Button Name="login" Click="login_Click" Content="Logowanie" Height="25" Margin="20,180,20,0" Width="120"/>
	</Grid>
</Window>
